<!DOCTYPE html>

<html>
    <head>
        <title><%= title %> | Page</title>
        <script src="js/bootstrap.js"></script>
        <script src="js/ace/ace.js" type="text/javascript" charset="utf-8"></script>
        <!-- <script src="js/ace/theme-monokai.js"></script> -->
        <link rel="stylesheet" href="css/bootstrap.css">
        <style type="text/css" media="screen">
          #editor {
            width: 98%;
            height: 40rem;
          }
      </style>
    </head>
    <body>
      <%- include('./partials/navbar.ejs') %>
        <div class="form mx-2">
            <div class="d-flex mb-3 col-12">
              <div class="col-4 mx-1">
                  <label class="form-label" for="language">Language</label>
                  <select class="form-select" id="language" onchange="changeLang()">
                      <option selected>Select Language</option>
                      <option value="c">C</option>
                      <option value="cpp">C++</option>
                      <option value="java">Java</option>
                      <option value="js">Javascript (Node)</option>
                      <option value="php">Php</option>
                      <option value="python">Python</option>
                  </select>
              </div>
              <div class="col-4 mx-1">
                <label class="form-label" for="theme">Theme</label>
                <select class="form-select" id="theme" onchange="changeTheme()">
                  <option selected>Select a Theme</option>
                </select>
              </div>
            </div>
            <div id="editor" class="my-2 mx-2">//Code goes here.......
            </div>
            <button class="btn btn-primary" id="compile_button">Compile</button>
            <hr />
            <div class="mb-3 mx-2">
              <input type="checkbox"  id="should_custom_input" value="yes"/>
              <label for="code" class="form-label">Enter Custom Input</label>
              <div id="custom_input_div" style="display: none;">
                <textarea class="form-control" id="custom_input" rows="5" placeholder="Enter Custom Input"></textarea>
              </div>
              
            </div>
            <hr />
            <div class="mb-3 mx-2">
              <label for="code" class="form-label"><strong>Result</strong> </label>
              <br />
              <i><span id="compile_time"></span></i>
              <textarea class="form-control" id="result" rows="10" disabled></textarea>
            </div>
        </div>
        <hr />  
    </body>
    <script src="js/compile.js"></script>
    <%- include('./partials/footer.ejs') %>
</html>